model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  done        Boolean   @default(false)

  // NEW
  dueDate     DateTime?
  imageUrl    String?

  // Edges in the dependency graph
  dependenciesFrom TaskDependency[] @relation("FromTask") // this task depends on others (outgoing edges)
  dependenciesTo   TaskDependency[] @relation("ToTask")   // other tasks depend on this (incoming edges)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TaskDependency {
  id     Int  @id @default(autoincrement())
  fromId Int
  toId   Int

  from   Task @relation("FromTask", fields: [fromId], references: [id])
  to     Task @relation("ToTask",   fields: [toId],   references: [id])

  @@unique([fromId, toId])
}
